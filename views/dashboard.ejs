<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" href="style.css">
  <title>Dashboard</title>
</head>

<body>
  <div>
    <div class="sidebar p-4 bg-primary" id="sidebar">
      <h4 class="mb-5 text-white">Manesty Capital</h4>
      <li>
        <a class="text-white" href="#">
          <i class="bi bi-house mr-2"></i>
          Dashboard
        </a>
      </li>
      <a class="text-white" href="/logout">
        <i class="bi bi-box-arrow-left mr-2"></i>
        Logout
      </a>
      </li>
    </div>
  </div>

  <!-- main konten -->

  <section class="p-4" id="main-content">
    <button class="btn btn-primary" id="button-toggle">
      <i class="bi bi-list"></i>
    </button>

    <div class="credit-card mt-5">
      <div class="card-logo">
          <img src="https://www.freepnglogos.com/uploads/verified-by-visa-logo-png-0.png" alt="Visa logo" />
      </div>
      <div class="card-number">
          **** **** **** <%= card.censoredNumber %>
      </div>
      <div class="card-holder">
          <%= profile.name %>
      </div>
      <div class="card-expiry">
          <%= card.exp %>
      </div>
  </div>
  <form action="/dashboard" class="mt-5" method="get">
    <select class="form-select" name="find">
      <option selected disabled>Filter</option>
      <% type.forEach(element => { %>
        <option value="<%= element.typeName %>"><%= element.typeName %></option>
      <% }) %>
    </select>
    <button class="btn btn-primary mt-5 " type="submit">Filter</button>
  </form>
      <div class="row">
        <div class="col-md-12 mt-5">
          <div class="table-responsive-sm">
            <table class="table">
              <thead class="table-primary">
               <tr>
                <th>No</th>
                <th>Date</th>
                <th>Title</th>
                <th>Amount</th>
                <th>Transaction Category</th>
               </tr>
              </thead>
              <tbody>
                <% transactionList.forEach((transaction,index) => { %>
              <tr>
                <td><%= index+1 %></td>
                <td><%= transaction["Transaction"].TransactionDate %></td>
                <td><%= transaction["Transaction"]["title"] %></td>
                <td><%= helper(transaction["Transaction"]["amount"]) %></td>
                <td><%= transaction["TransactionType"]["typeName"] %></td>
              </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    

  </section>
  <script>
    // event will be executed when the toggle-button is clicked
    document.getElementById("button-toggle").addEventListener("click", () => {

      // when the button-toggle is clicked, it will add/remove the active-sidebar class
      document.getElementById("sidebar").classList.toggle("active-sidebar");

      // when the button-toggle is clicked, it will add/remove the active-main-content class
      document.getElementById("main-content").classList.toggle("active-main-content");
    });
  </script>

</body>

</html>